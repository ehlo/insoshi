<h1>New preference</h1>

<%= error_messages_for :preference %>

<% form_for(@preference) do |f| %>
  <p>
    <b>Email domain</b><br />
    <%= f.text_field :domain %>
  </p>

  <p>
    <b>Smtp server</b><br />
    <%= f.text_field :smtp_server %>
  </p>

  <p>
    <b>Smtp server port</b><br />
    <%= f.text_field :smtp_server_port %>
  </p>

  <p>
    <b>Email notifications</b><br />
    <%= f.check_box :email_notifications %>
  </p>

  	<p>
	  <b>Smtp server authentification:</b><br />
	  <%= f.check_box :smtp_auth %>
	</p>

	<p>
	  <b>Smtp server username:</b><br />
	  <%= f.text_field :smtp_server_username %>
	</p>

	<p>
	  <b>Smtp server password:</b><br />
	  <%= f.text_field :smtp_server_password %>
	</p>

	<p>
	  <b>Smtp server TLS</b><br />
	  <%= f.check_box :smtp_server_tls %>
	</p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_preferences_path %>
